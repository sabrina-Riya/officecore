<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Dashboard</title>
  <style>
    body { font-family: Arial, sans-serif; background:#f4f6f8; padding:20px; }
    .card { display:inline-block; padding:20px; margin:10px; background:#fff; box-shadow:0 2px 6px rgba(0,0,0,0.1); border-radius:8px; width:200px; text-align:center; text-decoration:none; color:#333; }
    h3 { margin-bottom:10px; }
  </style>
</head>
<body>
  <% 
    // Safe defaults
    const safeAdminName = typeof adminName !== 'undefined' ? adminName : "Admin";
    const safeTotalUsers = typeof totalUsers !== 'undefined' ? totalUsers : 0;
    const safePendingLeave = typeof pendingLeave !== 'undefined' ? pendingLeave : 0;
    const safeApprovedLeave = typeof approvedLeave !== 'undefined' ? approvedLeave : 0;
    const safeRejectedLeave = typeof rejectedLeave !== 'undefined' ? rejectedLeave : 0;
  %>

  <h2>Welcome, <%= safeAdminName %></h2>
  <p>Total Users: <%= safeTotalUsers %></p>

  <div class="cards">
    <a href="/admin/users" class="card">
      <h3>Total Employees</h3>
      <p><%= safeTotalUsers %></p>
    </a>
    <a href="/admin/leave?status=pending" class="card">
      <h3>Pending Leave Requests</h3>
      <p><%= safePendingLeave %></p>
    </a>
    <a href="/admin/leave?status=approved" class="card">
      <h3>Approved Leaves</h3>
      <p><%= safeApprovedLeave %></p>
    </a>
    <a href="/admin/leave?status=rejected" class="card">
      <h3>Rejected Leaves</h3>
      <p><%= safeRejectedLeave %></p>
    </a>
  </div>
</body>
</html>
