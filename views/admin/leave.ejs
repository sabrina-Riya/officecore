<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Leave Requests</title>
  <style>
    body { font-family: Arial; background:#f4f6f8; padding:20px; }
    h2 { color:#333; }
    table { width:100%; border-collapse: collapse; margin-top:20px; }
    th, td { padding:10px; border:1px solid #ddd; text-align:center; }
    th { background:#333; color:#fff; }
    a { text-decoration:none; margin:0 5px; color:#0066cc; }
    a:hover { text-decoration:underline; }
    .flash { padding:10px; margin-bottom:15px; border-radius:5px; }
    .success { background:#d4edda; color:#155724; }
    .error { background:#f8d7da; color:#721c24; }
  </style>
</head>
<body>
  <h2>Leave Requests</h2>

  <!-- Flash messages -->
  <% if (success_msg && success_msg.length) { %>
    <div class="flash success">
      <% success_msg.forEach(msg => { %>
        <p><%= msg %></p>
      <% }) %>
    </div>
  <% } %>
  <% if (err_msg && err_msg.length) { %>
    <div class="flash error">
      <% err_msg.forEach(msg => { %>
        <p><%= msg %></p>
      <% }) %>
    </div>
  <% } %>

  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Employee</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% if (leaves.length === 0) { %>
        <tr>
          <td colspan="6">No leave requests found.</td>
        </tr>
      <% } %>
      <% leaves.forEach(leave => { %>
        <tr>
          <td><%= leave.id %></td>
          <td><%= leave.employee_name %></td>
          <td><%= leave.start_date ? new Date(leave.start_date).toISOString().slice(0,10) : "-" %></td>
          <td><%= leave.end_date ? new Date(leave.end_date).toISOString().slice(0,10) : "-" %></td>
          <td><%= leave.status %></td>
          <td>
            <a href="/admin/leave/<%= leave.id %>">View</a>
            <% if (leave.status === "pending") { %>
              <a href="/admin/leave/approve/<%= leave.id %>" onclick="return confirm('Approve this leave?')">Approve</a>
              <a href="/admin/leave/reject/<%= leave.id %>">Reject</a>
            <% } %>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
