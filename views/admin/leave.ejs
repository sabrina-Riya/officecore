<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Leaves</title>
  <style>
    table { width:100%; border-collapse: collapse; }
    th, td { padding:10px; border:1px solid #ddd; }
    th { background:#333; color:#fff; }
  </style>
</head>
<body>
  <h2>Leave Requests</h2>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Employee</th>
        <th>Start</th>
        <th>End</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% leaves.forEach(leave => { %>
        <tr>
          <td><%= leave.id %></td>
          <td><%= leave.employee_name %></td>
          <td><%= leave.start_date ? new Date(leave.start_date).toISOString().slice(0,10) : "-" %></td>
          <td><%= leave.end_date ? new Date(leave.end_date).toISOString().slice(0,10) : "-" %></td>
          <td><%= leave.status %></td>
          <td>
            <a href="/admin/leave/<%= leave.id %>">View</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
