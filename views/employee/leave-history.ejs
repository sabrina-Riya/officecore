<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Leave History</title>
  <style>
    body { font-family: Arial; background:#f4f6f8; padding:20px; }
    table { width:100%; border-collapse: collapse; margin-top:20px; }
    th, td { padding:10px; border:1px solid #ddd; text-align:center; }
    th { background:#333; color:#fff; }
    .flash { padding:10px; border-radius:5px; margin-bottom:15px; }
    .success { background:#d4edda; color:#155724; }
    .error { background:#f8d7da; color:#721c24; }
  </style>
</head>
<body>
  <h2>Leave History - ID: <%= leave.id %></h2>

  <% if (success_msg && success_msg.length) { %>
    <div class="flash success">
      <% success_msg.forEach(msg => { %><p><%= msg %></p><% }) %>
    </div>
  <% } %>
  <% if (err_msg && err_msg.length) { %>
    <div class="flash error">
      <% err_msg.forEach(msg => { %><p><%= msg %></p><% }) %>
    </div>
  <% } %>

  <p><strong>Reason:</strong> <%= leave.reason %></p>
  <p><strong>Status:</strong> <%= leave.status %></p>

  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Action</th>
        <th>Message</th>
        <th>Old Status</th>
        <th>New Status</th>
        <th>Performed By</th>
        <th>Date</th>
      </tr>
    </thead>
    <tbody>
      <% if (logs.length === 0) { %>
        <tr><td colspan="7">No history available.</td></tr>
      <% } %>
      <% logs.forEach(log => { %>
        <tr>
          <td><%= log.id %></td>
          <td><%= log.action %></td>
          <td><%= log.message %></td>
          <td><%= log.old_status || '-' %></td>
          <td><%= log.new_status || '-' %></td>
          <td><%= log.performed_by_name || '-' %></td>
          <td><%= new Date(log.created_at).toISOString().slice(0,19).replace("T"," ") %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
