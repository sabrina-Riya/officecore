<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Employee Dashboard</title>

  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f4f6f8;
      margin: 0;
      padding: 20px;
    }

    h2 {
      margin-bottom: 20px;
      color: #333;
    }

    a {
      text-decoration: none;
      color: inherit;
    }

    .top-links {
      margin-bottom: 20px;
    }

    .top-links a {
      margin-right: 15px;
      color: #007bff;
      font-weight: bold;
    }

    .cards {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 20px;
      margin-bottom: 40px;
    }

    .card {
      background: #ffffff;
      padding: 20px;
      border-radius: 8px;
      text-align: center;
      box-shadow: 0 2px 6px rgba(0,0,0,0.1);
      transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .card:hover {
      transform: translateY(-4px);
      box-shadow: 0 6px 14px rgba(0,0,0,0.15);
    }

    .card h3 {
      margin-bottom: 10px;
      font-size: 15px;
      color: #555;
    }

    .card p {
      font-size: 26px;
      font-weight: bold;
      color: #111;
      margin: 0;
    }

    .success {
      color: green;
      margin-bottom: 10px;
    }

    .error {
      color: red;
      margin-bottom: 10px;
    }

    footer {
      margin-top: 40px;
      color: #666;
      text-align: center;
    }

    .latest-leave {
      margin-top: 30px;
      padding: 20px;
      background: #fff;
      border-radius: 8px;
      box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    }

    .latest-leave h3 {
      margin-bottom: 10px;
      color: #333;
    }

    .latest-leave p {
      margin: 5px 0;
      color: #555;
    }

    .latest-leave a {
      display: inline-block;
      margin-top: 10px;
      color: #007bff;
      font-weight: bold;
    }
  </style>
</head>
<body>

  <!-- Top navigation links -->
  <div class="top-links">
    <a href="/logout">Logout</a>
    <a href="/employee/leave-apply">Apply Leave</a>
    <a href="/employee/leave-list">My Leaves</a>
  </div>

  <!-- Welcome message -->
  <h2>Welcome, <%= username %></h2>

  <!-- Flash messages -->
  <% if (success_msg && success_msg.length > 0) { %>
    <p class="success"><%= success_msg %></p>
  <% } %>
  <% if (err_msg && err_msg.length > 0) { %>
    <p class="error"><%= err_msg %></p>
  <% } %>

  <!-- Stats cards -->
  <div class="cards">
  <a href="/employee/leave-list" style="text-decoration: none;">
    <div class="card">
      <h3>Total Leaves</h3>
      <p><%= totalleave %></p>
    </div>
  </a>

  <a href="/employee/leave-list?status=approved" style="text-decoration: none;">
    <div class="card">
      <h3>Approved Leaves</h3>
      <p><%= approvedLeave %></p>
    </div>
  </a>

  <a href="/employee/leave-list?status=rejected" style="text-decoration: none;">
    <div class="card">
      <h3>Rejected Leaves</h3>
      <p><%= rejectedLeave %></p>
    </div>
  </a>
</div>

  <!-- Latest Leave Details -->
  <% if (leave) { %>
    <div class="latest-leave">
      <h3>Latest Leave Details</h3>
      <p><strong>Start Date:</strong> <%= leave.start_date.toDateString() %></p>
      <p><strong>End Date:</strong> <%= leave.end_date.toDateString() %></p>
      <p><strong>Reason:</strong> <%= leave.reason %></p>
      <p><strong>Status:</strong> <%= leave.status %></p>
      <% if (leave.status === 'rejected' && leave.rejection_reason) { %>
        <p><strong>Rejection Reason:</strong> <%= leave.rejection_reason %></p>
      <% } %>
      <a href="/employee/leave/history/<%= leave.id %>">View Full History</a>
    </div>
  <% } %>

  <!-- Footer -->
  <footer>
    Â© 2025 OfficeCore
  </footer>

</body>
</html>
