<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My Leave Requests</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f6f8;
      padding: 30px;
    }
    h2 { color: #333; }
    table {
      width: 100%;
      border-collapse: collapse;
      background-color: #fff;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }
    th, td {
      padding: 10px;
      border: 1px solid #ccc;
      text-align: center;
    }
    th { background-color: #007bff; color: #fff; }
    .btn {
      padding: 5px 10px;
      border: none;
      border-radius: 4px;
      color: #fff;
      text-decoration: none;
      cursor: pointer;
    }
    .edit-btn { background-color: #28a745; }
    .disabled { color: #999; }
    .success { color: green; margin-bottom: 10px; }
    .error { color: red; margin-bottom: 10px; }
  </style>
</head>
<body>

<a href="/employee/dashboard">‚Üê Back to Dashboard</a>
<a href="/logout">Logout</a>

<h2>My Leave Requests</h2>

<!-- Flash Messages -->
<% if (success_msg && success_msg.length) { %>
  <div class="success"><%= success_msg %></div>
<% } %>
<% if (err_msg && err_msg.length) { %>
  <div class="error"><%= err_msg %></div>
<% } %>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Start Date</th>
      <th>End Date</th>
      <th>Reason</th>
      <th>Status</th>
      <th>Approved By</th>
      <th>Rejection Reason</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% if (leave && leave.length > 0) { %>
      <% leave.forEach(l => { %>
        <tr>
          <td><%= l.id %></td>
          <td><%= l.start_date ? l.start_date.toDateString() : "-" %></td>
          <td><%= l.end_date ? l.end_date.toDateString() : "-" %></td>
          <td><%= l.reason || "-" %></td>
          <td><%= l.status.toUpperCase() %></td>
          <td><%= l.approved_by || "-" %></td>
          <td><%= l.rejection_reason || "-" %></td>
          <td>
            <% if (l.status === "pending") { %>
              <a class="btn edit-btn" href="/employee/leave/edit/<%= l.id %>">Edit</a>
            <% } else { %>
              <span class="disabled">Locked</span>
            <% } %>
          </td>
        </tr>
      <% }) %>
    <% } else { %>
      <tr>
        <td colspan="8">No leave requests found</td>
      </tr>
    <% } %>
  </tbody>
</table>

</body>
</html>
