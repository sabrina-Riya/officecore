<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Leave List</title>
  <style>
    body { font-family: Arial; margin: 30px; background: #f4f6f8; }
    table { width: 100%; border-collapse: collapse; background: #fff; margin-top: 20px; }
    th, td { padding: 12px; border-bottom: 1px solid #ddd; }
    th { background: #007bff; color: #fff; }
    tr.pending { background-color: #fff3cd; }
    tr.approved { background-color: #d4edda; }
    tr.rejected { background-color: #f8d7da; }
    a { text-decoration: none; color: #007bff; margin-right: 10px; }
    .success { color: green; margin-bottom: 10px; }
    .error { color: red; margin-bottom: 10px; }
    button { padding: 6px 12px; border: none; border-radius: 4px; cursor: pointer; }
  </style>
</head>
<body>

<h2>Your Leave Requests</h2>

<!-- Flash messages -->
<% if (success_msg && success_msg.length > 0) { %>
  <div class="success"><%= success_msg %></div>
<% } %>

<% if (err_msg && err_msg.length > 0) { %>
  <% err_msg.forEach(e => { %>
    <div class="error"><%= e %></div>
  <% }) %>
<% } %>

<table>
  <thead>
    <tr>
      <th>Start Date</th>
      <th>End Date</th>
      <th>Reason</th>
      <th>Status</th>
      <th>Approved By</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% leave.forEach(l => { %>
      <tr class="<%= l.status %>">
        <td><%= l.start.toISOString().split('T')[0] %></td>
        <td><%= l.end.toISOString().split('T')[0] %></td>
        <td><%= l.reason %></td>
        <td><%= l.status %></td>
        <td><%= l.approved_by || "-" %></td>
        <td>
          <% if (l.status === 'pending') { %>
            <!-- Edit button links to the edit form -->
            <a href="/employee/leave/edit/<%= l.id %>">Edit</a>

            <!-- Cancel leave form -->
            <form action="/employee/leave/cancel/<%= l.id %>" method="POST" style="display:inline;">
              <button type="submit">Cancel</button>
            </form>
          <% } else { %>
            -
          <% } %>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>

<br>
<a href="/employee/dashboard">â¬… Back to Dashboard</a>
<a href="/logout">Logout</a>

</body>
</html>
